<!doctype html>
<html>
    <head>
        <meta charset="utf-8"/>
        <title>Git-Learning</title>
        <link href="http://localhost:8080/css/Layout.css" type="text/css" rel="stylesheet"  />
    </head>
    <body>
            
        <img class="logo" src='http://localhost:8080/images/logo3.png' alt="logo">
            
        <header>
                <a class="header2" href="/Profile">Profile</a>
                <form action="/logout" method="post">
                <p><input type="submit" value="Log Out" class="header3"></p>
                </form>
        </header>
        <nav>
                <ul class="nav4">
                    <li><a class="nav1" href="/Home">Home</a></li>
                    <li>Module List
                        <ul>
                            {{#each module}}
                             <li><a class="lessons" href="/menu/{{this.id}}">{{{this.name}}}</a></li>
                             {{/each}}   
                        </ul>
                    </li> 
                    <li>Lectures List
                        <ul>
                             {{#each lecture}}
                                <li><a class="lessons" href="/lecture/{{this.id}}/module/{{this.module_id}}">{{{this.title}}}</a></li>
                             {{/each}}
                        </ul>
                    </li> 
                    
                    <li><a class="nav3" href="/Profile">Profile</a></li>
                </ul>
            </nav>

            <article class="side">
                    <br>
                    <h1>{{{lecture.title}}}</h1>
                    
                    <h3>{{question.question}}</h3>
                    
                    <form action="/lecture/{{question.lecture_id}}/quiz/{{question.id}}/module/{{question.module_id}}" method="post">
                        <input type="radio" name="option" value="{{option.option1}}" > {{option.option1}}<br>
                        <input type="radio" name="option" value="{{option.option2}}" > {{option.option2}}<br>
                        <p><input type="submit" value="Submit"></p>
                    </form>
        
                    
            </article>
            

        <footer>
            <a class="f1" href="/ContactUs">Contact Us<br><br></a>
            <a class="f2" href="/Copyright">Copyright<br><br></a>
            <a class="f3" href="/menu/1">Home<br></a>
            <p class="cr"> Â© Copyright E-learner 2019</p>
        </footer>
    </body>

</html>